{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YZY POS",
  "version": "0.1.0",
  "identifier": "com.yzy.pos",
  "build": {
    "beforeBuildCommand": "cd ../pos-frontend && npm run build",
    "beforeDevCommand": "cd ../pos-frontend && npm run dev",
    "frontendDist": "../pos-frontend/out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "YZY POS",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      ".env"
    ]
  },
  "plugins": {
    "opener": {
      "requireLiteralLeadingDot": false
    }
  }
}